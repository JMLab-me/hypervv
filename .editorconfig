root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.json]
indent_size = 4

[.devcontainer/*.json]
indent_style = tab
tab_width = 4

[*.hcl]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2
